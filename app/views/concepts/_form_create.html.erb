<!-- FORM FOR CREATING/ EDITING A CONCEPT -->

<%= form_for @concept do |f| %>
    <div class="flex">
        <%= f.label :text, 'Concept' %>
        <%= f.text_field :text, required: true, :placeholder => "New concept..." %>
    </div>

    <div class="flex">
        <%= f.label :category %>
        <%= collection_select(:concept, :category_id, Category.all,:id, :name, { prompt: "Select category"}) %>
    </div>

    <div class="flex">
        <%= f.label :meaning %>
        <%= f.text_area :meaning, :row => '3', :placeholder => "Meaning..." %>
    </div>
    <div class="flex">
        <%= f.label :image %>
        <%= f.file_field :image, multiple: false, direct_upload: true, :placeholder => "Search image or enter a link", :row => '3' %>
    </div>

    <div class="flex">
        <%= f.label :example %>
        <%= f.text_area :example, :row => '6', :placeholder => "Enter after each example to separate them (if any)" %>
    </div>

    <div class="flex">
        <%= f.label :source %>
        <%= f.text_field :source, :placeholder => "How do you know the concept?" %>
    </div>

    <div class="flex">
        <%= f.label :translation %>
        <%= f.text_field :translation, :placeholder => "Well, you may need this" %>
    </div>

    <div class="flex">
        <%= f.label :note %>
        <%= f.text_area :note, :row => '3',:placeholder => "Enter after each note to separate them (if any)" %>
    </div>

    <div>
        <%= f.label :family_ids, 'Related families' %>
        <div class="checkboxes">
            <%= f.collection_check_boxes :family_ids, @current_user.families.all, :id, :text %>
        </div>
    </div>

    <div>
        <%= f.label :linking_concept_ids, 'Linking concepts' %>
        <div class="checkboxes">
            <%= f.collection_check_boxes :linking_concept_ids, @current_user.concepts.all, :id, :text %>
        </div>
    </div>

    <%= f.submit %>
<% end %>
